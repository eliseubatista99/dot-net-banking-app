@page "/m/SignUp"
@page "/t/SignUp"
@page "/d/SignUp"

@namespace DotNetBankingAppClient.Pages
@inherits SignUpPageLogic

<PageTitle>Banking App - Sign Up</PageTitle>
<AppScreen title="Sign Up" variant="AppHeaderVariant.Dark" pageClasses="signUp-app-screen" contentClasses="signUp-app-screen-children" loading=@IsFetching>
    <div class="signUp-content">
        <Typography color="TypographyColor.Highlight" classes="signUp-title">Welcome To Dot Net Banking!</Typography>
        <Typography classes="signUp-subtitle">Create an account to get started</Typography>

        <div class="signUp-icon"></div>

        <div class="signUp-inputs">
            <InputField value=@UserName onChange="@OnChangeUserName" placeholder="User Name" />
            <InputField value=@Password onChange="@OnChangePassword" placeholder="Password" />
            <InputField value=@PhoneNumber onChange="@OnChangePhoneNumber" placeholder="Phone Number" />
        </div>
        @if(ErrorMessage != null)
        {
            <Typography color="TypographyColor.Error" classes="signUp-error-message">@ErrorMessage</Typography>
        }

        <div class="signUp-bottom-content" styles="">
            <AppButton text="Sign In" onClick="@OnClickSignUpButton" defaultClasses="signUp-button" />
            <Typography>Have an account? <span onclick="@OnClickSignInLink" style="color: #0077d1; padding: 2px 0; font-weight: 600;">Sign In</span></Typography>
        </div>
    </div>
</AppScreen>
