@page "/Accounts"
@namespace DotNetBankingAppClient.Pages
@inherits AccountsPageLogic

<PageTitle>Banking App - Accounts</PageTitle>

<AppScreen title="Accounts" loading=@isFetching onClickBack="@(() => OnClickBack())">
    <div class="page-accounts-content">
        @if (checkingAccounts.Count > 0)
        {
            <Typography classes="page-accounts-group-title">Checking Accounts</Typography>
            <div class="page-accounts-list">
                @foreach (var acc in checkingAccounts)
                {
                    <AccountItem Value="@acc" Styles="max-width: 100%;"/>
                }
            </div>
        }
        @if (savingAccounts.Count > 0)
        {
            <Typography classes="page-accounts-group-title">Saving Accounts</Typography>
            <div class="page-accounts-list">
                @foreach (var acc in savingAccounts)
                {
                    <AccountItem Value="@acc" Styles="max-width: 100%;" />
                }
            </div>
        }
    </div>
</AppScreen>


