@namespace DotNetBankingAppClient.Components
@inherits ResponsiveRendererLogic;

@if(WindowSize == ResponsiveWindowSize.Desktop)
{
    @if(DesktopContent != null)
    {
        @DesktopContent
    } else if(TabletContent != null)
    {
        @TabletContent
    } else
    {
        @MobileContent
    }
} else if(WindowSize == ResponsiveWindowSize.Tablet)
{
    if (TabletContent != null)
    {
        @TabletContent
    }
    else
    {
        @MobileContent
    }
} else
{
    @MobileContent
}
