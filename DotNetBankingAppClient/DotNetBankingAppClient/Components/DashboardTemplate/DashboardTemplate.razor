@namespace DotNetBankingAppClient.Pages
@inherits DashboardTemplateLogic

<CascadingValue Value="this">
    <AppScreen withoutHeader pageClasses="dashboard-app-screen" contentClasses="dashboard-app-screen-children">
        @if (windowSize == ResponsiveWindowSize.Desktop)
        {
            <div class="dashboard-heading">
                <DashboardHeader />
                <DashboardNavigation />
            </div>

        } else if(showHeaderOnMobile == true)
        {
            <div class="dashboard-heading">
                <DashboardHeader />
            </div>
        }
        <div class="dashboard-content">
            @ChildContent
        </div>
        @if (windowSize != ResponsiveWindowSize.Desktop)
        {
            <DashboardNavigation />
        }
    </AppScreen>
</CascadingValue>
