@using System.Diagnostics

<input name="input" type="text" value=@value oninput="@HandleValueChanged" style="width: 300px; height: 50px;"/>


@code {
    [Parameter]
    public string value { get; set; } = "";
    [Parameter]
    public Action<string>? onChange { get; set; }


    private void HandleValueChanged(ChangeEventArgs e)
    {
        string newValue = e?.Value?.ToString() ?? "";
        if(onChange != null)
        {
            onChange(newValue);
        }
    }
}
